<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

    <script src="{{ 'application.js' | asset_url }}" defer></script>

    {% comment %} <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script> {% endcomment %}
    <script src="{{ 'submenudropdown.js' | asset_url }}" defer></script>  
    <script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>  


  <style>
  @import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap');
    .primary{
      background-color:#141C24;
      font-family: "Josefin Sans", sans-serif;
      font-optical-sizing: auto;
      font-weight: 600;
      font-style: normal;
      color: #D4DEE7;
      min-height:100vh
    }

    #main{
      min-height: calc(100vh - 402px);
    }

    [x-cloak] {display:none!important}
  </style>

  </head>
  <body class="primary">
    {% section 'header' %}
    <main id="main" role="main" class="p-5">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}
  </body>
</html>