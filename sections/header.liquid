{%  assign main_menu_linklist = linklists[section.settings.menu].links %}
<!-- linklists[section.settings.menu].links = linklists.main-menu.links : but now it is flexible based on section.settings -->

<div x-data="{ mobileMenuOpen: false }" class="relative bg-white">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10 ">
      <!-- STORE NAME / STORE LOGO -->
      <div class="flex justify-start lg:flex-1 truncate">
        <h1 class="text-xl font-bold truncate">{{ section.settings.mobile_menu_title }}</h1>
      </div>

         <!-- Mobile Menu Icon-->
      <div class="-mr-2 -my-2 ml-3 md:hidden">
        <button x-on:click="mobileMenuOpen = true" type="button" class="bg-white p-2 inline-flex items-center justify-center focus:outline-none">
          {% render 'icon-hamburger' %}
        </button>
      </div>

      <!-- NAVIGATION MENU -->
      <nav class="hidden md:flex space-x-10">
        {% comment %} {% for link in linklists.main-menu.links %}   {% endcomment %}
        {% for link in main_menu_linklist %}  
         <!-- link with Sub link --> 
            {% if link.links != blank %}
              <!-- create variable-->
              {% assign link_handle = link.handle | replace: '-', '_' %}
                <div x-data="{ {{  link_handle }}: false}" class="relative" >
                    <button x-on:click="{{  link_handle }} = ! {{ link_handle }}" type="button" class="inline-flex items-center text-base text-gray-500  hover:text-amber-700">
                        {{  link.title }}
                        {% render 'icon-dropdown'  %}
                    </button>

                    <div x-show="{{ link_handle }}"  class="absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md left-0 sm:px-0 lg:ml-0 max-md:left-1/2 max-md:-translate-x-1/2" >
                        <div class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                            <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">

                            <!-- CREATE THE SUBLINK -->
                            {% for childlink in link.links %}
                              <a href="{{ childlink.url }}" class="-m-3 p-3 flex items start rounded-lg hover:bg-gray-100">
                                <div class="ml-4">
                                  <p class="text-gray-900 text-base font-medium">
                                    {{  childlink.title }}
                                  </p>
                                </div>
                              </a>
                            {% endfor %}
                
                            </div>
                        </div>
                    </div>

                </div>
            {% else %}
                  <!-- link No Sub link --> 
                <div class="relative">
                    <a href="{{ link.url }}" class="text-base hover:text-amber-700 {% if link.active == true %} text-amber-600 {% else %} text-gray-500 {% endif %}" >{{  link.title }}</a>
                </div>
            {%  endif %}

        {% endfor %}

      </nav>

      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        <a href="{{ routes.cart_url  }}" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
          {% render 'icon-shopping-bag' %}
        </a>

        <!-- https://admin.shopify.com/store/cabin-for-rent/settings/customer_accounts?link_source=search#accounts_experience -->
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_login_url }}" class="text-base text-gray-500 hover:text-gray-900">Login</a>
          <a href="{{ routes.account_register_url }}" class="text-base text-gray-500 hover:text-gray-900">Register</a> 
        {% endif %}

      </div>



    </div>
  </div>

    <!-- MOBILE MENU CONTAINER -->
  <div class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden" x-show="mobileMenuOpen">
      <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
          <div class="p-5 divide-y-2 divide-gray-50">

              <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->
              <div class="flex items-center justify-between pb-3">
                  <div>
                      <h1 class="text-lg text-gray-800 uppercase font-black">{{  shop.name }}</h1>
                  </div>
                  <div class="-mr-2">
                      <button x-on:click='mobileMenuOpen = false' type="button" class="bg-white rounded-md p-2 text-gray-500">
                          {% render 'icon-close' %}
                      </button>
                  </div>
              </div>

              <!-- NAVIGATION LINKS FOR MOBILE MENU -->
              <div class="pt-3">
                  <nav class="grid gap-y-7">

                    {% comment %} {%  for link in linklists.main-menu.links %} {% endcomment %}
                    {%  for link in main_menu_linklist %}
                      {% assign link_handle = link.handle | replace: '-',"_" %}

                      {% if link.links != blank %}
                        <!-- LInk with sub-->
                        <div x-data="{ {{ link_handle }}: false }" class="relative">
                          <button x-on:click="{{ link_handle }} = !{{ link_handle }}" type="button" class="text-base text-gray-500 hover:text-gray-900 flex items-center justify-between w-full">
                            <div>{{  link.title }}</div>
                            {% render 'icon-dropdown' %}
                          </button>
                         <div x-show="{{ link_handle }}" class="grid gap-y-7 py-3">
                            {% for childlink in link.links %}
                             
                                <a href="{{  childlink.url }}" class="-m-3 p-3 mt-2 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                                    <span class="ml-3 text-base font-medium text-gray-500">{{ childlink.title }}</span>
                                </a>
                          
                            {% endfor %}
                          </div>
                        </div>

                        {%  else %}
                          <a href="{{  link.url}}" class="-m-3 p-3 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50">
                              {{  link.title}}
                          </a>
                      {% endif %}
                    {%  endfor %}
                      

                  </nav>
              </div>
          </div>
      </div>

  </div>
</div>

<!-- schema: https://cabin-for-rent.myshopify.com/admin/themes/146505760905/editor?hr=9292 -->
{% schema %}
  {
    "name":"Header",
    // input fields inside section
    "settings": [
      {
        "type":"text",
        "id":"mobile_menu_title", // use for name of menu
        "label":"Title",
        "default":"Menu",
        "info":"This is title of the mobile menu window",
      },
      // can Create many settings
      {
        "type":"link_list",
        "id":"menu", // use for link_list
        "label":"Header",
        "default":"main-menu",
      }
    ]
  }
{% endschema %}