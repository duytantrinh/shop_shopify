<div class="py-8">
{% paginate blog.articles by section.settings.number_of_blog_posts %}
        <h1 class="text-center text-3xl">{{ blog.title }}</h1>

        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for article in blog.articles %}
                    <div class="w-full py-6 px-3">
                        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
                            {% if article.image %}
                                <a href="{{ article.url }}">
                                    <img class="w-full h-80 object-cover" src="{{ article.image | image_url: width: 350}}" alt="{{ article.image.alt }}" width="350px" height="350px">
                                </a>
                            {% else %}
                                {{ 'image' | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
                            {% endif %}

                            <div class="pt-2 pb-4 px-2">

                                <h1 class="text-xl font-medium my-4 h-[50px] overflow-hidden">{{ article.title | truncatewords: 8}}</h1>
                                
                                {% if article.excerpt.size > 0 %}
                                    <p>{{ article.excerpt | strip_html | truncatewords: 11}}</p>
                                {% else %}
                                    <p>{{ article.content | strip_html | truncatewords: 11}}</p>
                                {% endif %}

                                 <a href="{{ article.url }}" class="font-medium text-blue-500 hover:text-amber-400 my-4 block">{{ section.settings.blog_read_more }}</a>
                       
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>       
        </div>

        <!-- Pagination Button -->
        <div class="max-w-6xl mx-auto">
            {% comment %} pg : name of variable/parameter ==> pass Object paginate  {% endcomment %}
            {% render 'pagination', pg:paginate %}
        </div> 

    {% endpaginate %}
</div>

{% schema %}
{
    "name":"Blog",
    "settings": [
        {
            "type":"range",
            "label":"Posts per page",
            "id":"number_of_blog_posts",
            "min":1,
            "max":12,
            "default": 1,
            "step":1
            
        },
        {
             "type":"text",
            "label":"Read more",
            "id":"blog_read_more",
            "default":"Read more"
        }
    ]
}

{% endschema %}