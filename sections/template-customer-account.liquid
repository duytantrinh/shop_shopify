<div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    <h1 class="text-2xl font-bold text-gray-300">Account</h1>

    <div class="block md:flex gap-4">
        <!-- customer.orders : get alll order of logged in customer -->
        {% assign number_of_orders = customer.orders | size %}
        {% if number_of_orders > 0 %}
            <div class="w-full my-6 md:my-12">
                <h2 class="text-xl font-bold text-gray-300">Order history</h2>

                {% paginate customer.orders by 8 %}
                    <div class="mt-6 grid grid-cols-1 gap-y-5 gap-x-5 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-6">
                        {% for order in customer.orders %}
                            <div class="relative border border-gray-600">
                                <div class="w-full min-80 bg-gray-200 rounded-md overflow-hidden lg:h-80">
                                    {% if order.line_items.first.image %}
                                        <img class="w-full h-full object-center object-cover" src="{{ order.line_items.first.image | image_url: width: 350 }}" alt="{{ order.line_items.first.image.alt }}" width="350px" height="350px">
                                    {% else %}
                                        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-center object-cover' }}
                                    {% endif %}
                                </div>

                                <div class="mt-4 flex items-start justify-between p-2">
                                    <div>
                                        <!-- {{ order.name | link_to: order.customer_url }} : create a link to the detail order  -->
                                        <h3 class="text-md text-gray-300 hover:text-amber-400">{{ order.name | link_to: order.customer_url }}</h3>

                                        <p class="mt-1 text-sm text-amber-500">{{ order.financial_status_label }}</p>
                                    </div>
                                    <div class="text-right">
                                        <p class="text-sm font-medium text-white bg-gray-700 rounded-full px-3 py-1">{{ order.fulfillment_status_label }}</p>
                                        <p class="text-sm text-amber-500">{{ order.total_price | money }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                    </div>

                   <!-- Pagination Button -->
                <div class="max-w-6xl mx-auto">
                    {% comment %} pg : name of variable/parameter ==> pass Object paginate  {% endcomment %}
                    {% render 'pagination', pg:paginate %}
                </div> 

                {% endpaginate %}
            </div>
        {% else %}
            <div class="w-full h-80 flex items-center justify-center">
                <h2 class="text-base md:text-2xl font-medium">You currently don't have any orders</h2>
            </div>
        {% endif %}


        <div class="w-full md:w-1/4">
            <h2 class="text-xl font-bold text-gray-300 mb-12">Account details</h2>

            {{ customer.default_address | format_address }}

            <a href="{{ routes.account_addresses_url }}" class="text-sm text-blue-600 hover:text-blue-900 underline">View addresses</a>
        </div>
    </div>
</div>