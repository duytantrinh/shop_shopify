 <div class="w-full p-3">
    <div class="border border-gray-700 shadow-lg rounded-lg overflow-hidden">
        <a href="{{ product.url }}">
            {% if product.featured_image %}
                <div class="h-80 overflow-hidden">
                    <img class="w-full h-full object-cover transition duration-500 ease-in-out hover:scale-105 transform" src="{{ product.featured_image | image_url:width:350 }}" alt="{{ product.featured_image.alt }}" width="350px" height="350px">
                </div>
                
            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
            {% endif %}
        </a>
        
        <div class="flex flex-col p-4">
            <span class="text-sm text-gray-400 mb-1">{{ product.vendor }}</span>

            <a href="{{ product.url }}" class="text-gray-300 font-semibold text-2xl mb-2 hover:text-amber-500">{{ product.title }}</a>

            <p class="text-amber-400 text-lg">{{ product.price | money }}</p>
        </div>
        
    </div>
</div>