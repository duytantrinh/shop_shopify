{% case media.media_type %}
    {% when 'image' %}
        <img src="{{ media | image_url: width: 350 }}" alt="{{ media.preview_image.alt }}" class="w-full h-full object-cover" width="350px" height="350px">
    
    {% when 'external_video' %}
        {{ media | external_video_tag: class: 'w-full h-80 object-cover' }}

    {% when 'video' %}
        {{ media | video_tag: controls: true, class: 'w-full h-full object-cover' }}

    {% comment %} 3D model {% endcomment %}
    {% when 'model' %}
        {{ media | model_viewer_tag }}

    {% else %}
        {{ media | media_tag }}
        
{% endcase %}